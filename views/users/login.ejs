<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('../partials/movingBg.ejs') %>
        <section class="form-page">

            <section class="form-background card">
                <div class="form-heading">
                    <h2>
                        Login
                    </h2>
                </div>
                <form action="/login" method="post" class="form-fields">
                    <div class="form-field">
                        <label for="email">Username or Email</label>
                        <input type="text" name="username" id="username" placeholder="Username or Email" value="a" />
                    </div>
                    <div class="form-field">
                        <label for="password">Password</label>
                        <input type="password" name="password" id="password" placeholder="Password" value="a" />
                    </div>
                    <div class="form-field-input">
                        <input type="submit" name="submit" id="submit" value="Login" class="btn btn-submit" />
                    </div>
                </form>
            </section>
        </section>
        <script src="/javascript/hoveringForm.js"></script>
</body>

</html>